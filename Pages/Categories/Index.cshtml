@page "{id:int?}"
@model Suteu_Darius_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Category != null)
        {
            @foreach (var item in Model.Category)
            {
                string selectedRow = item.ID == Model.CategoryID ? "table-success" : "";
                <!-- Evidențiază categoria selectată -->

                <tr class="@selectedRow">
                    <td>
                        <a asp-page="./Index" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.CategoryName)</a>
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.CategoryData != null && Model.CategoryData.Books != null && Model.CategoryData.Books.Any())
{
    <h3>Books in Selected Category: @Model.Category?.FirstOrDefault(c => c.ID == Model.CategoryID)?.CategoryName</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.CategoryData.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author?.FullName</td> <!-- Verificăm și `Author` pentru a evita alte erori `null` -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No books available for the selected category.</p>
}
